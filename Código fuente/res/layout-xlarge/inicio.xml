<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_p_vertical">

    <Button
        android:id="@+id/b_nuevo_grupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/select_nuevo_grupo"
        android:minHeight="80dp"
        android:minWidth="400dp"
        android:onClick="nuevo_evento" />

    <Button
        android:id="@+id/b_ayuda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/b_nuevo_grupo"
        android:layout_below="@+id/b_nuevo_grupo"
        android:layout_marginTop="72dp"
        android:background="@drawable/select_ayuda"
        android:minHeight="80dp"
        android:minWidth="400dp"
        android:onClick="ayuda" />

    <Button
        android:id="@+id/b_salir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="159dp"
        android:background="@drawable/select_salir"
        android:minHeight="80dp"
        android:minWidth="400dp"
        android:onClick="salir" />

</RelativeLayout>